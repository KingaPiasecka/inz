<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:textSize="40dp"
        android:title="Measurement options">

        <ListPreference
            android:defaultValue="11"
            android:entries="@array/deviceId"
            android:entryValues="@array/deviceIdValues"
            android:key="deviceId"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="Device identifier" />

    </PreferenceCategory>

    <PreferenceCategory
        android:textSize="40dp"
        android:title="PoDust">

        <ListPreference
            android:entries="@array/about"
            android:entryValues="@array/aboutV"
            android:dialogMessage="AGH Faculty of Physics and Applied Computer Science. All rights reserved."
            android:key="about"
            android:negativeButtonText="@null"
            android:positiveButtonText="OK"
            android:title="About" />

    </PreferenceCategory>


</PreferenceScreen>